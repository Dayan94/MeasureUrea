<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rice2"
    tools:context="com.example.abudayan.measureurea.ActivityInfoGhom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headline"
        android:textSize="25sp"
        android:text="গমের ব্যাপারে কিছু তথ্যঃ"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:text="১। গমের মূল অবস্থায় জমিতে প্রতি একরে ৫৫ কেজি, প্রতি শতাংশে ৫৫০ গ্রাম, প্রতি বিঘাতে ১৮ কেজি ১৫০ গ্রাম, প্রতি কাঠাতে ৯০০ গ্রাম ডাই-এমোনিয়াম-ফসফেট তথা DAP সার প্রয়োগ করুন।"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/headline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:text="২। গমের ক্ষেত্রে Leaf Color Chart(LCC) এর সংকট মানঃ ৪।"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        />
</RelativeLayout>
