<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rice2"
    tools:context=".ActivityCropAmanType">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headline"
        android:textSize="30sp"
        android:text="আমন ধানের চারা রোপন করেছিলেন নাকি বীজ বপন করেছিলেন তা বাছাই করুন"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="রোপা আমন"
        android:id="@+id/btnTransplantedAman"
        android:textSize="30sp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/headline"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="বোনা আমন"
        android:id="@+id/btnSeededAman"
        android:textSize="30sp"
        android:layout_below="@+id/btnTransplantedAman"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:background="@android:color/holo_green_light"/>

</RelativeLayout>
