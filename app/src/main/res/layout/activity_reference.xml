<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rice2"
    tools:context="com.example.abudayan.measureurea.ActivityReference">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/lcc"
        android:layout_marginBottom="123dp"
        android:layout_above="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headline"
        android:textSize="20sp"
        android:text="যে সকল website এ গেলে Leaf Color Chart(LCC) ব্যবহার করে কি করে ইউরিয়া সার প্রয়োগ করতে হয় সে ব্যাপারে জানতে পারবেনঃ"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_above="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.nitrogenparameters.com"
        android:id="@+id/button1"
        android:textSize="20sp"
        android:background="@android:color/holo_green_light"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.knowledgebank.irri.org"
        android:id="@+id/button2"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_green_light"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.knowledgebank-brri.org"
        android:id="@+id/button3"
        android:textSize="20sp"
        android:background="@android:color/holo_green_light"
        android:layout_below="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp" />

</RelativeLayout>
