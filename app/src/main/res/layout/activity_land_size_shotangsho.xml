<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rice2"
    tools:context="com.example.abudayan.measureurea.ActivityLandSizeShotangsho">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="জমির পরিমাণ দিনঃ"
        android:textSize="40sp"
        android:id="@+id/headline"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputUnit2"
        android:hint="কত"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_below="@+id/headline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="126dp"
        android:layout_toLeftOf="@+id/acre"
        android:layout_toStartOf="@+id/acre"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="শতাংশ"
        android:textSize="40sp"
        android:id="@+id/acre"
        android:layout_alignBaseline="@+id/inputUnit2"
        android:layout_alignBottom="@+id/inputUnit2"
        android:layout_alignRight="@+id/headline"
        android:layout_alignEnd="@+id/headline" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="পরবর্তী ধাপ"
        android:id="@+id/buttonColorMatch"
        android:textSize="30sp"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="120dp" />

</RelativeLayout>
